{
  "name": "sitemap-xml-generator",
  "version": "1.0.0",
  "description": "Générateur de sitemap XML conforme aux standards avec parsing regex",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "node --test tests/",
    "validate": "node src/index.js --validate-only",
    "parse": "node src/index.js --input data/urls.txt --output output/sitemap.xml"
  },
  "bin": {
    "sitemap-gen": "src/index.js"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "fast-xml-parser": "^4.3.2",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "prettier": "^3.1.0"
  } 
}
